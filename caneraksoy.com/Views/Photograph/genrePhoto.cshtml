@model List<Entities.Photograph>


<html>
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery.fillcolor.1.1.0.min.js"></script>
    <link href="~/Content/fontawesome.css" rel="stylesheet" />

    <style>
        .grid {
            margin-top: 100px;
            padding: 1em;
            column-count: 4;
        }

        .grid-item img {
            width: 100%;
            margin-bottom: 1em;
        }

        


        @@media(max-width:800px) {
            .grid {
                column-count: 3
            }
        }

        @@media(max-width:500px) {
            .grid {
                column-count: 2
            }
        }

        @@media(max-width:300px) {
            .grid {
                column-count: 1
            }
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.9);
        }


        .modal-content {
            margin: auto;
            display: block;
            width: 80%;
            max-width: 90%;
            padding-bottom: 100px;
        }

        @@media only screen and (max-width: 700px) {
            .modal-content {
                width: 100%;
            }

            .grid {
                margin-top: 0px;
                padding-top: 70px;
            }
        }

        .close {
            position: absolute;
            top: 15px;
            right: 35px;
            color: #f1f1f1;
            font-size: 40px;
            font-weight: bold;
            transition: 0.3s;
        }

            .close:hover,
            .close:focus {
                color: #bbb;
                text-decoration: none;
                cursor: pointer;
            }

        #caption {
            margin: auto;
            display: block;
            width: 80%;
            max-width: 700px;
            text-align: center;
            color: #ccc;
            padding: 10px 0;
            height: 150px;
        }

        .desc {
            margin-bottom: 20px;
            border: 1px solid #787b7b;
            background-color: #7C8674;
            text-align: center;
            margin-top: -20px;
            color: #cccccc;
            font-size: calc(0.75em + 1vmin);
        }

            .desc img {
                display: none;
            }

        .modal-img-avarage-color {
            display: none;
        }

        .share {
            position: absolute;
            top: 28px;
            right: 54px;
            color: #f1f1f1;
            font-size: 22px;
            font-weight: bold;
            transition: 0.3s;
            margin-right: 30px;
        }

            .share:hover, share:focus {
                color: #bbb;
                text-decoration: none;
                cursor: pointer;
            }

        .like {
            position: absolute;
            top: 28px;
            right: 54px;
            color: #f1f1f1;
            font-size: 22px;
            font-weight: bold;
            transition: 0.3s;
            margin-right: 74px;
            padding-left: 5px;
        }

            .like:hover, like:focus {
                color: #bbb;
                text-decoration: none;
                cursor: pointer;
            }
       
    </style>



</head>
<body>
    <div class="grid">
        @foreach (var item in Model)
        {

            <div class="grid-item">


                <img loading="lazy" class="img-@item.Link" id="img-@item.Id" src="@item.Link" alt="@item.Name">

                <div class="desc">@item.Name <img src="@item.Link"></div>


                <div id="img-modal-@item.Id" class="modal">
                    <img class="modal-img-avarage-color" src="@item.Link" />
                    @*<span class="like fas fa-heart"></span>

                    <span class="share fas fa-share-alt"> </span*@>
                    <span class="close">&times;</span>

                    <img class="modal-content" id="img" src="@item.Link">

                    <div id="caption"></div>
                </div>



            </div>



        }

    </div>







</body>
<body>
    <script>
        $('.grid-item img').click(function () {
            $(this).parent().find('.modal').show();
        })

        $('.grid-item .modal .close').click(function () {
            $(this).parent().hide();
        })

        $(function () {
            $('.desc').fillColor();
        });

        $(function () {
            $('.modal').fillColor();
        });

    </script>


</body>

</html>
