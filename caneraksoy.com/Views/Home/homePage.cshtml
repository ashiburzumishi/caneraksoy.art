                color: #cccccc;
                font-size: calc(0.75em + 1.5vmin);
            }

            .titleAndDetail-link.a {
                border-bottom: 2px solid #55c57a
            }

            .art-container {
                position: absolute;
                font-size: calc(0.75em + 1.5vmin);
                margin-left: 5%;
                text-align: center;
                float: left;
                color: #787b7b;
                font-family: Sorts Mill Goudy, serif;
                bottom: 10px;
            }

                .art-container:hover {
                    color: #4b8919;
                }


            .grid {
                padding: 1em;
                column-count: 4;
            }

            .grid-item-protection {
                border: 5px solid transparent;
                break-inside: avoid;
                padding-top: 10px;
            }

            @@media(max-width:800px) {
                .grid {
                    column-count: 3
                }
            }

            @@media(max-width:500px) {
                .grid {
                    column-count: 1
                }
            }

            @@media(max-width:300px) {
                .grid {
                    column-count: 1
                }
            }

            .ayrac {
                border-radius: 5px;
                border: 2px solid #979a9a78;
                width: 80%;
                opacity: 50%;
            }

            .caneraksoyart {
                text-align: center;
                letter-spacing: 3px;
                position: relative;
                margin-top: 25px;
                font-size: calc(0.75em + 3vmin);
                height: 10%;
                font-family: Sorts Mill Goudy, serif;
                font-weight: 400;
                color: #8e9393;
            }
        

    </style>
</head>






