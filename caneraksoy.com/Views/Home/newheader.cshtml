
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link href="~/Content/fontawesome.css" rel="stylesheet" />

    <style>

        html { height: 100%; }
        body { height: 100%; margin: 0px; padding: 0px; position: relative; background-color: #2a343d; }
        .menu-container { height: 100%; width: 20%; background-color: white; border-right: 1px solid grey; position: relative; }
        .rights-container { border-top: 1px solid #abb1b1; padding-top: 20px; height: 5%; width: 80%; margin-left: 10%; margin-top: 420px; text-align: center; font-family: "Open Sans", Helvetica, Arial, sans-serif; color: #787b7b; }
        .signature { width: 100%; height: 23%; background-color: green; }
        .menu-button { height: 60%; width: 100%; background-color: white; position: absolute; }
            .menu-button .buttons { position: relative; margin-top: 25px; font-size: 13px; margin-left: 15%; width: 70%; height: 10%; background-color: white; font-family: "Open Sans", Helvetica, Arial, sans-serif; text-align: right; color: #8e9393; }
        .socialmedia-button { height: 5%; width: 100%; text-align: center; color: #787b7b; }
        .menu-link { text-decoration: none; color: #787b7b; }
            .menu-link:hover { font-size: 15px; }
        .social-link { text-decoration: none; color: #787b7b; }
        .signature .signature-img { width: 100%; height: 100%; }
        .mobile-menu-container { display: none; }



        @@media screen and (max-width:700px) {
            .menu-container { display: none; }
            .hamburger-button { color: #787b7b; font-size: 30px; position: relative; margin-left: 10px; margin-top: 10px; background-color: transparent; border: none; }
            .mobile-menu-container { display: block; width: 100%; height: 8%; background-color: white; position: absolute; }
            .mobile-menu-button-container { background-color: white; }
            .mobile-buttons { display:none; width: 100%; height: 40px; background-color: white; position: relative; margin-top: 10px; }
            .mobile-menu-link { text-decoration: none; color: #787b7b; margin-left: 15px; position: relative; }
        }

        @@media screen and (min-width:700px) and (max-width:1024px) { }
    </style>
</head>
<body>
    <div class="mobile-menu-container">
        <button class="hamburger-button fas fa-bars" onclick="hidef()" id="hidebutton"></button>
        <div class="mobile-menu-button-container">

            <div class="mobile-buttons"><a class="mobile-menu-link" href="">GALERIES</a></div>
            <div class="mobile-buttons"><a class="mobile-menu-link" href="">SENDART</a></div>
            <div class="mobile-buttons"><a class="mobile-menu-link" href="">CONTACT</a></div>
            <div class="mobile-buttons"><a class="mobile-menu-link" href="">ABOUT</a></div>
            <div class="mobile-buttons"><a class="mobile-menu-link" href="">LOGIN</a></div>

        </div>

    </div>
    <div class="menu-container">

        <div class="signature">

            <img class="signature-img" src="~/photo/signature.png" />
        </div>
        <div class="menu-button">
            <div class="buttons"><strong><a class="menu-link" href="">GALERIES </a></strong></div>
            <div class="buttons"><strong><a class="menu-link" href="">SENDART </a></strong></div>
            <div class="buttons"><strong><a class="menu-link" href="">CONTACT </a></strong></div>
            <div class="buttons"><strong><a class="menu-link" href="">ABOUT </a></strong></div>
            <div class="buttons"><strong><a class="menu-link" href="">LOGIN </a></strong></div>
        </div>

        <div class="rights-container">
            <div class="rights"> ©2020 caneraksoy.art</div>
        </div>
        <div class="socialmedia-button">
            <a class="social-link" href="https://www.instagram.com/paleoaksoy/" target="_blank"><div class="fab fa-instagram"></div></a>
            <a class="social-link" href="https://twitter.com/AksoyCaner" target="_blank"><div class="fab fa-facebook"></div></a>
            <a class="social-link" href="https://www.facebook.com/AksoyCaner1" target="_blank"><div class="fab fa-twitter"></div></a>

        </div>
    </div>

    <script>

        function hidef() {


            $(".mobile-buttons").slideToggle(1000);

        }


    </script>
</body>
</html>